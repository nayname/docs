{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Cosmos Documentation",
  "description": "Build the future of the internet of blockchains with Cosmos.",
  "theme": "mint",
  "colors": {
    "primary": "#40eff2",
    "light": "#FAFAFA",
    "dark": "#0E0E0E"
  },
  "icons": {
    "library": "lucide",
    "colors": {
      "primary": "#4B47CA"
    }
  },
  "styling": {
    "codeblocks": "system"
  },
  "favicon": "/assets/brand/cosmos.svg",
  "logo": {
    "light": "/assets/brand/cosmos-wordmark-dark.svg",
    "dark": "/assets/brand/cosmos-wordmark.svg"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Gaia EVM Devnet",
            "pages": [
              "docs/devnet/introduction",
              "docs/devnet/connect-to-the-network",
              "docs/devnet/run-a-full-node",
              "docs/devnet/get-tokens",
              "docs/devnet/predeploys",
              {
                "group": "Precompiles",
                "pages": [
                  "docs/devnet/precompiles/overview",
                  "docs/devnet/precompiles/bank",
                  "docs/devnet/precompiles/bech32",
                  "docs/devnet/precompiles/callbacks",
                  "docs/devnet/precompiles/distribution",
                  "docs/devnet/precompiles/erc20",
                  "docs/devnet/precompiles/evidence",
                  "docs/devnet/precompiles/governance",
                  "docs/devnet/precompiles/ics20",
                  "docs/devnet/precompiles/p256",
                  "docs/devnet/precompiles/slashing",
                  "docs/devnet/precompiles/staking",
                  "docs/devnet/precompiles/werc20"
                ]
              },
              {
                "group": "Tooling & Resources",
                "pages": [
                  "docs/devnet/tooling-and-resources/overview",
                  "docs/devnet/tooling-and-resources/foundry",
                  "docs/devnet/tooling-and-resources/hardhat",
                  "docs/devnet/tooling-and-resources/testing-and-fuzzing"
                ]
              }
            ]
          }
        ]
      },
      {
        "tab": "Developer Guides (Coming Soon)",
        "pages": ["docs/guides/coming-soon"]
      },
      {
        "tab": "API Reference (Coming Soon)",
        "pages": ["docs/api-reference/coming-soon"]
      }
    ]
  },
  "footer": {
    "socials": {
      "twitter": "https://twitter.com/cosmos",
      "github": "https://github.com/cosmos",
      "discord": "https://discord.gg/cosmosnetwork",
      "website": "https://cosmos.network"
    }
  },
  "appearance": {
    "default": "system",
    "strict": false
  },
  "search": {
    "prompt": "Search docs..."
  }
}
